<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiResidencia20.Views.Logueo.IniciarSesionPage"
             Title="Inicio de sesión">

    <ScrollView>

     
      <StackLayout Margin="10,150">
          
            <Label Text="¡Hola de nuevo!" TextColor="Black" HorizontalOptions="CenterAndExpand"
                    FontSize="20"/>

            <Label Text="Inicia sesión con tu nombre de usuario para empezar..."
                    TextColor="#51555E" HorizontalOptions="StartAndExpand"  FontAttributes="None"/>

           <Frame HasShadow="True">
                     <Entry Placeholder="Nombre de usuario"  Keyboard="Text"
                     x:Name="nombreRegistradoEntry"/>
            </Frame>

              <StackLayout Margin="50,20">
                
                           

                 <Button Text="Iniciar sesión " Clicked="Btn_IniciarConUsuario" 
                         HeightRequest="40"  Padding="0" CornerRadius="3" Margin="0,15"/>

            </StackLayout>
     </StackLayout>

     
   </ScrollView>
</ContentPage>
